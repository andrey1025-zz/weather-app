<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FCFF">

    <TextView
        android:id="@+id/tv_nointernet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Uho! Looks like the device is not connected to the internet"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:textColor="#000"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/la_nointernet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="nointernet.json"
        app:lottie_loop="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="120dp"/>


    <RelativeLayout
        android:id="@+id/restart"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="refresh.json"
            app:lottie_loop="true" />

    </RelativeLayout>

</RelativeLayout>